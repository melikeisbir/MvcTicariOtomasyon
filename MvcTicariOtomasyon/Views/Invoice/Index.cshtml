@using MvcTicariOtomasyon.Models.Class
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Popup Liste</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FaturaSeriNo @item.FaturaSiraNo</td>
            <td>@item.Tarih</td>
            <td>@item.Saat</td>
            <td>@item.Toplam₺</td>
            <td><a href="/Invoice/FaturaGetir/@item.FaturaID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Invoice/FaturaDetay/@item.FaturaID" class="btn btn-outline-group" style="background-color:lightsteelblue; color:white">Detay</a></td>
            <td><a href="/Invoice/FaturaDetay/@item.FaturaID" class="btn btn-outline-group" style="background-color:gainsboro">Popup</a></td>
            <td><a href="/Invoice/FaturaDetay/@item.FaturaID" class="btn btn-outline-group" style="background-color:darkgrey; color:white">Kalem</a></td>
        </tr>
    }
</table>
<a href="/Invoice/FaturaEkle/" class="btn btn-outline-primary">Yeni Fatura Girişi</a>
<br /><br />
<button type="button" class="btn btn-warning" style="background-color:#ed7c7c; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
        </div>
    </div>
</div>