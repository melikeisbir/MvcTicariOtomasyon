@using MvcTicariOtomasyon.Models.Class
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.KategoriID
            </td>
            <td>
                @item.KategoriAd
            </td>
            <td><a href="/Category/KategoriSil/@item.KategoriID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/KategoriGetir/@item.KategoriID" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Category/KategoriEkle/" class="btn btn-outline-primary">Kategori Ekle</a>