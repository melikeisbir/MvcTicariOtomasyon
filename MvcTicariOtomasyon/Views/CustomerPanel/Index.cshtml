@model MvcTicariOtomasyon.Models.Class.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<h3>Mvc Online Ticari Otomasyon Cari Bilgi Paneli</h3>

@using (Html.BeginForm("Index2", "CustomerPanel", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td><label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label></td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
        </tr>
    </table>
    <button class="btn btn-default" style="background-color:lightsteelblue">Bilgilerimi Güncelle</button>
}